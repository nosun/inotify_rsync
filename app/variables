#!/bin/bash

# Path to watch and sync
WATCH_PATH=''

# Where files, necessary for script functioning will reside
DATA_FOLDER=$ROOT'/data'
# Hosts to sync to
HOSTS_FILE=$DATA_FOLDER'/hosts.list'

# List of the domains we need to check
DOMAINS_FILE=$DATA_FOLDER'/domains.list'

# Filename, without extension responsible for monitoring
EXECUTABLE='launch_inotify'

# Command will be used to restart watch
RESTART_COMMAND=$ROOT'/launch_inotify.sh --path='

# Log folder
LOG_FOLDER=$ROOT'/logs/'

# Date format
DATE_FORMAT='%Y/%m/%d %H:%M:%S'
